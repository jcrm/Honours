/////////////
// GLOBALS //
/////////////

Texture2D texture1;
Texture2D texture2;
SamplerState SampleType;

cbuffer MergeBuffer
{
	float mergeRatio;
	float3 padding_;
};


//////////////
// TYPEDEFS //
//////////////
struct PixelInputType
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 MergePixelShader(PixelInputType input) : SV_TARGET
{
	float4 color_ = texture1.Sample(SampleType, input.tex);
	float4 secondTexture = texture2.Sample(SampleType, input.tex);
	//add on a ration of the second texture to the first
	color_= color_ + (mergeRatio*secondTexture);
	color_.a = 1.0f;
    return color_;
}
